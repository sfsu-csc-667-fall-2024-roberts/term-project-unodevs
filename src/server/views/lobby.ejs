<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobby</title>
    <link rel="stylesheet" type="text/css" href="/Stylesheets/lobby.css" />
    <script src="/scripts/chat.js" defer></script>
    <script type="module" src="/scripts/lobby.js" defer></script>
  </head>
  <body>
    <h1>Lobby for Game <%- gameId %></h1>

    <div>
      <a href="/home"><button>Homepage</button></a>
      <a href="/rules"><button>Rules</button></a>
      <a href="/game"><button>Game Page</button></a>
      <% if (!loggedIn) { %>
      <a href="/signin"><button>Sign In</button></a>
      <a href="/signup"><button>Sign Up</button></a>
      <% } else { %>
      <a href="/logout"><button>Logout</button></a>
      <% } %>
    </div>

    <h2>Party Members:</h2>
    <div id="player-container">
      <% players.forEach(player => { %>
      <p class="player-name">
        <%= player.username %>
      </p>
      <% }); %>
    </div>

    <!-- Chat partial included -->
    <div class="bottom-container">
      <%- include('partials/chat', { chatMessages: messages, roomId: gameId }) %>
      <div id="lobby-button-container">
        <button id="start-button">Start Game</button>
        <button id="leave-button">Leave Lobby</button>
      </div>
    </div>

    <input type="hidden" id="game-id" value="<%= gameId %>" />
  </body>
</html>
