<div class="popup" id="popup-container" style="display: none">
  <header>
    <h1>Create Game</h1>
    <button id="close-popup">X</button>
  </header>
  <hr />

  <form id="create-game-form" autocomplete="off">
    <input
      id="create-game-name"
      type="text"
      name="name"
      placeholder="Name of Game"
      autocomplete="off"
      required
    />
    <input
      id="create-game-password"
      type="text"
      name="password"
      placeholder="Password (Optional)"
      autocomplete="off"
    />
    <label for="create-game-max-players">Max Number of Players</label>
    <input
      id="create-game-max-players"
      type="number"
      value="2"
      name="max_players"
      min="2"
      max="4"
      required
    />
    <!-- The button remains the same but will now trigger form submission -->
    <button type="submit" id="form-create-game">Create Game</button>
  </form>
</div>
