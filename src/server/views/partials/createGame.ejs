<div id="popup-container" style="display: none">
    <header>
      <h1>Create Game</h1>
      <button id="close-popup">X</button>
    </header>
    <hr />
    <form>
      <input
        type="text"
        name="name"
        placeholder="Name of Game"
        autocomplete="false"
        required
      />
      <input
        type="text"
        name="password"
        placeholder="Password"
        autocomplete="false"
      />
      <label>Max Number of Players</label>
      <input
        type="number"
        value="2"
        name="max_players"
        min="2"
        max="4"
        required
      />
      <button type="submit" id="form-create-game">Create Game</button>
    </form>
  </div>