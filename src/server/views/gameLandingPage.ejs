<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Game Landing Page</title>
    <link rel="stylesheet" href="/Stylesheets/gameLandingPage.css">
    <script src="/scripts/homepage.js" defer></script>
</head>
<body>
    <!-- Navigation Links -->
    <div class="centered-links">
        <a href="/home"><button>Homepage</button></a>
        <a href="/lobby"><button>Lobby</button></a>
        <a href="/game"><button>Game Page</button></a>
        <% if (!loggedIn) { %>
            <a href="/signin"><button>Sign In</button></a>
            <a href="/signup"><button>Sign Up</button></a>
        <% } else { %>
            <a href="/logout"><button>Logout</button></a>
        <% } %>
    </div>

    <main>
        <h1>Available Games</h1>


        <!-- Game List -->
        <div id="game-list" class="game-list">
            <% lobbies.forEach(lobby => { %>
            <div class="game-entry">
                <p>Game: <%= lobby.name %></p>
                <p>Game ID: <%= lobby.id %></p>
                <p><%= lobby.has_password ? "Private" : "Public" %></p>
                <a href="/lobby/<%= lobby.id %>">
                    <button class="join-game-button">Join Lobby</button>
                </a>
            </div>
            <% }); %>
        </div>
    </main>
</body>
</html>
