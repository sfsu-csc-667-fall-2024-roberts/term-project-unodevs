<!doctype html>
<html lang="en">
<head>
    <title>Sign In</title>
    <link rel="stylesheet" href="/Stylesheets/signin.css">
</head>
<body>


    <main>
        <h1>Welcome to the Sign In Page</h1>
        <div class="centered-links">
            <a href="/home"><button>Homepage</button></a>
            <a href="/rules"><button>Rules</button></a>
            <a href="/game"><button>Game Page</button></a>
            <% if (!loggedIn) { %>
                <a href="/signin"><button>Sign In</button></a>
                <a href="/signup"><button>Sign Up</button></a>
            <% } else { %>
                <a href="/logout"><button>Logout</button></a>
            <% } %>
        </div>
        
       
        <section>
            <%- include('partials/error', { errors: errors }) %>
        </section>

        <section>
            <form id="signinForm" method="post" action="/signin">
                <header>
                    <h2>Sign In</h2>
                </header>
                <div class="input">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="you@domain.com" required />
                </div>
                <div class="input">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required />
                </div>
                <button type="submit">Login</button>
            </form>
        </section>
    </main>


</body>
</html>
