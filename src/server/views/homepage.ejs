<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" type="text/css" href="/Stylesheets/homepage.css" />
    <script src="/scripts/homepage.js" defer></script>
  </head>
  <body>
    <main>
      <h1>Welcome to the Homepage</h1>
      <div class="centered-links">
        <a href="/home"><button>Homepage</button></a>
        <a href="/rules"><button>Rules</button></a>
        <a href="/game"><button>Game Page</button></a>
        <% if (typeof loggedIn !== "undefined" && !loggedIn) { %>
          <a href="/signin"><button>Sign In</button></a>
          <a href="/signup"><button>Sign Up</button></a>
        <% } else { %>
          <a href="/logout"><button>Logout</button></a>
        <% } %>
      </div>

      <% if (user) { %>
      <div id="auth-container">
        <div id="create-game-button-container">
          <button id="create-game-button">Create a game</button>
        </div>
      </div>

      <%- include('partials/createGame') %>
      <% } %>
      <div id="welcome-messages">
        <p>Create a new game to get started!</p>
        <p>Or head to the Games Page if you already have a game.</p>
      </div>
    </main>
  </body>
</html>
